<%- include("../partials/header.ejs")  %>
    <div class="container">
        <div>
            <h1 style="text-align: center;">Create a New Campground:</h1>
        </div>
        <div class="form-container">
            <form action="/campgrounds" method="post">
                <div class="form-group">
                    <input type="text" name="name" placeholder="Campground Name" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="image" id="" class="form-control" placeholder="Image">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="description" id="exampleFormControlTextarea1" rows="3" placeholder="Description"></textarea>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>

    <%- include("../partials/footer.ejs") %>