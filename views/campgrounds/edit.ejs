<%- include("../partials/header.ejs")  %>
    <div class="container">
        <div>
            <h1 style="text-align: center;">Edit
                <%= campground.name  %>
            </h1>
        </div>
        <div class="form-container">
            <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" name="campground[name]" value="<%= campground.name  %> " class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="campground[image]" id="" class="form-control" value="<%= campground.image %> ">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="campground[description]" id="exampleFormControlTextarea1" rows="3"><%= campground.description  %></textarea>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>

    <%- include("../partials/footer.ejs") %>